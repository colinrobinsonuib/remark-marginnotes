{
  "name": "remark-marginnotes",
  "version": "0.1.0",
  "description": "A Remark plugin to handle margin note (side note) definitions and references.",
  "keywords": [
    "remark",
    "remark-plugin",
    "rehype",
    "markdown",
    "footnote",
    "sidenote",
    "tufte",
    "tufte-css"
  ],
  "homepage": "https://github.com/colinrobinsonuib/remark-marginnotes#readme",
  "bugs": {
    "url": "https://github.com/colinrobinsonuib/remark-marginnotes/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/colinrobinsonuib/remark-marginnotes.git"
  },
  "license": "MIT",
  "author": "Colin Robinson",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./handlers": {
      "import": "./dist/rehype-handlers.js",
      "require": "./dist/rehype-handlers.cjs",
      "types": "./dist/rehype-handlers.d.ts"
    }
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build:esm": "tsc --project tsconfig.json --outDir ./dist --declaration --declarationMap --sourceMap",
    "build": "npm run clean && npm run build:esm",
    "dev": "tsc --watch --project tsconfig.json --outDir ./dist --declaration --declarationMap --sourceMap",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepack": "npm run build",
    "example": "node examples/basic-usage.js"
  },
  "peerDependencies": {
    "hastscript": "^7.0.0 || ^8.0.0",
    "mdast-util-to-hast": "^12.0.0 || ^13.0.0",
    "rehype": "^12.0.0 || ^13.0.0",
    "remark": "^14.0.0 || ^15.0.0",
    "unified": "^10.0.0 || ^11.0.0",
    "unist-util-remove": "^3.0.0 || ^4.0.0",
    "unist-util-visit": "^4.0.0 || ^5.0.0"
  },
  "peerDependenciesMeta": {
    "hastscript": {
      "optional": true
    },
    "mdast-util-to-hast": {
      "optional": true
    },
    "rehype": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/hast": "^3.0.4",
    "@types/mdast": "^4.0.4",
    "@types/node": "^22.14.1",
    "hastscript": "^9.0.1",
    "mdast-util-to-hast": "^13.2.0",
    "rehype-stringify": "^10.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "rimraf": "^6.0.1",
    "to-vfile": "^8.0.0",
    "typescript": "^5.8.3",
    "unified": "^11.0.5",
    "unist-util-remove": "^4.0.0",
    "unist-util-visit": "^5.0.0"
  },
  "engines": {
    "node": ">=20"
  }
}
